
# Use npm registry for all packages
registry=https://registry.npmjs.org/

# Increase timeouts for network issues
fetch-timeout=300000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Use legacy peer dependencies to avoid dependency conflicts
legacy-peer-deps=true

# Allow node-gyp fallbacks
node-gyp=node-gyp

# Explicitly use npm for git packages
@electron:registry=https://registry.npmjs.org/

# Disable git usage completely for problematic packages
@electron/node-gyp:registry=https://registry.npmjs.org/
node-gyp:registry=https://registry.npmjs.org/

# Force use of tarball downloads instead of git
prefer-offline=true
