
# Use npm registry for all packages
registry=https://registry.npmjs.org/

# Increase timeouts for network issues
fetch-timeout=600000
fetch-retry-mintimeout=60000
fetch-retry-maxtimeout=300000

# Use legacy peer dependencies to avoid dependency conflicts
legacy-peer-deps=true

# Allow node-gyp fallbacks
node-gyp=node-gyp

# Explicitly use npm for git packages
@electron:registry=https://registry.npmjs.org/
@electron/node-gyp:registry=https://registry.npmjs.org/

# Disable git usage completely for all packages
prefer-offline=true
git=false
node-gyp-git=false

# Completely disable git operations
git-tag-version=false
no-git-tag-version=true

# Use strict SSL for security
strict-ssl=true

# Force use of tarball downloads instead of git for specific troublesome packages
@electron/node-gyp:git=false
@electron/node-gyp:node-gyp-git=false
node-gyp:git=false
electron:git=false
electron-builder:git=false

# Use alternative method for node-gyp installation
@electron/node-gyp:tarball=true
node-gyp:tarball=true
